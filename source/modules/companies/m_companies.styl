.m_companies
  position relative
  .section-title + p
    font-size 21px
    text-align center
    margin-bottom 40px
  .hook
    border 1px solid $orange
    border-radius $radius
    background #fff
    max-width 770px
    margin 0 auto
    text-align center
    font-weight 500
    font-size 21px
    padding 30px 20px
    @media SM
      padding 50px
    p
      margin-bottom 30px
    .action
      a
        anim()
        display inline-block
        vertical-align middle
        color #fff
        text-decoration none
        background $blue
        border-radius $radius
        padding 15px 30px
        font-size 15px
        @media SM
          font-size 23px
          padding 20px 50px
        &:hover
          background $blue - 5%
        &:active
          background $blue - 15%