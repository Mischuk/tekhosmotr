.m_breadcrumbs
  position relative
  padding 15px 0
  cursor default
  ul
    font-size 0
  li
    display inline-block
    vertical-align middle
    line-height 15px
    & + li
      &:before
        content '/'
        display inline-block
        vertical-align top
        font-size 15px
        line-height 15px
        margin 0 3px
    &:last-child
      a
        color #333
        text-decoration none
        cursor default
    a
      font-size 13px
