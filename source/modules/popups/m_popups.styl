.popup
  position relative
  background #fff
  padding 40px 20px
  max-width 400px
  margin 40px auto
  border-radius $radius
  .mfp-close
    color $base-color
  .modal-heading
    bold()
    text-align center
    font-size 28px
    margin-bottom 15px
  form
    .row
      margin-bottom 15px
      &:last-child
        margin-bottom 0
      .column
        float left
        width 270px
        @media screen and (max-width: 420px)
          width 75%
        &:last-child
          width 90px
          @media screen and (max-width: 420px)
            width 25%
        .input
          width 155px
          @media screen and (max-width: 420px)
            width 100%
            padding-right 15px
    label
      clearfix()
      display block
      height 30px
      .input, .label
        float left
        font-size 16px
        line-height 30px
        height 30px
      .label
        width 100px
        @media screen and (max-width: 420px)
          display none
      .input
        width 260px
        @media screen and (max-width: 420px)
          width 100%
        input
          anim()
          width 100%
          height 30px
          line-height 30px
          border 1px solid $border-input
          padding-left 10px
          padding-right 10px
          border-radius $radius
          &:focus
            border 1px solid $border-input - 25%
    .submit
      input
        anim()
        background $base-color
        border none
        border-radius $radius
        height 30px
        line-height 30px
        color #fff
        width 100%
        &:hover
          background $base-color - 15%
        &:active
          box-shadow inset 0 0 20px rgba(0,0,0,.25)
    .options
      text-align right
      cursor default
      a
        display inline-block
        vertical-align middle
        padding 5px 0
        margin-right 10px
        text-decoration underline