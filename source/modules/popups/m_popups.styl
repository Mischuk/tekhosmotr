.popup
  position relative
  background #fff
  max-width 510px
  margin 40px auto
  padding 60px 0
  border-radius $radius
  .mfp-close
    font-size 0
    text-indent -9999px
    &:after
      content ''
      background: url('../images/sprite.png') no-repeat -150px 0;
      width: 12px;
      height: 12px;
      position absolute
      left 50%
      top 50%
      margin-top -6px
      margin-left -6px
      sprite()
  .popup-title
    text-align center
    font-size 31px
    margin-bottom 15px
    font-weight 300
  form
    .form-row
      position relative
      padding 0 15px
      margin-bottom 20px
      @media SM
        padding 0 45px
      &:last-child
        margin-bottom 0
      label
        font-size 14px
        color #333
        font-weight 500
      input
        width 100%
        border 1px solid $orange
        background #fff
        font-size 16px
        padding 10px 15px
        border-radius $radius
        font-family: Roboto,sans-serif;
        font-weight: 300;
        &:focus
          border-radius 0 0 $radius $radius
          & + .label
            display block
      .submit
        anim()
        display inline-block
        vertical-align middle
        width 100%
        color #fff
        text-decoration none
        background $blue
        border-radius $radius
        padding 10px 30px
        font-size 15px
        margin-top 20px
        border none
        roboto()
        font-weight 300
        @media SM
          font-size 23px
          padding 10px 50px
        &:hover
          background $blue - 5%
        &:active
          background $blue - 15%
    .label
      position absolute
      left 15px
      top -17px
      background $orange
      color #fff
      font-size 13px
      line-height 17px
      height 17px
      padding 0 6px
      display none
      @media SM
        left 45px
    .map
      label
        display block
        padding 0 45px
        font-size 14px
        color #333
        font-weight 500
      #popup-map,
      #popup-map-uri
        height 300px
        background $orange
    .select2-container
      width 100% !important
    .select2-container--default .select2-selection--single
      border-color $orange
      border-radius $radius
    .select2-container .select2-selection--single
      height 40px
    .select2-container--default .select2-selection--single .select2-selection__rendered
      font-size 16px
      line-height 40px
      roboto()
      font-weight 300
    .select2-dropdown
      border-color $orange
