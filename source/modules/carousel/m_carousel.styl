.m_carousel
  height 320px
  margin-top 100px
  @media screen and (min-width: 480px)
    margin-top 80px
  @media SM
    margin-top 100px
    height 600px
  .carousel-lead,
  .slick-list,
  .slick-track,
  .slide
    height 100%
  .wrapper
    z-index 10
  .slick-arrow
    position absolute
    top 50%
    width 40px
    height 75px
    margin-top -(@height/2)
    z-index 10
    text-indent -9999px
    font-size 0
    border none
    display none !important
    @media screen and (min-width: 640px)
      display block !important
    &.slick-prev
      left 15px
      background url("../images/arrow-prev.png") no-repeat 0 0
    &.slick-next
      right 15px
      background url("../images/arrow-next.png") no-repeat 0 0
  .vertical-inner
    @media screen and (min-width: 640px)
      padding-left 70px
      padding-right 70px
  .slide
    position relative
    color #fff
    .image
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background-repeat no-repeat
      background-position 50%
      background-size cover
    h2
      font-weight 300
      font-size 36px
      line-height 1
      margin-bottom 0.5em
      @media SM
        font-size 53px
      @media LG
        font-size 60px
      b
        font-weight 500
    p
      font-size 17px
      font-weight 300
      margin-bottom 1em
      @media SM
        font-size 25px
        max-width 75%
      @media LG
        font-size 31px
    .action
      a
        anim()
        display inline-block
        vertical-align middle
        color #fff
        text-decoration none
        background $blue
        border-radius $radius
        padding 15px 30px
        font-size 15px
        @media SM
          font-size 23px
          padding 20px 50px
        &:hover
          background $blue - 5%
        &:active
          background $blue - 15%