h1, h2, h3, h4, h5, h6
  line-height 1.2
  font-weight bold
h1
  font-size 36px
h2
  font-size 30px
h3
  font-size 24px
h4
  font-size 18px
h5
  font-size 14px
h6
  font-size 12px

p
  margin-top 0
  margin-bottom 20px

a
  color $link
  text-decoration underline
  &:hover
    color $link-hover

.section-title
  padding 20px 0 20px
  font-weight 300
  font-size 33px
  text-align center
  @media SM
    padding 70px 0 20px
    font-size 37px
  @media LG
    font-size 43px